<div class="col-md-6 col-md-offset-3">
<h3>新增试题</h3>

<%= simple_form_for @question do |f| %>
    <%= f.input :stem, label: "题干" %>
    <%= f.input :a, label: "选项A" %>
    <%= f.input :b, label: "选项B" %>
    <%= f.input :c, label: "选项C" %>
    <%= f.input :d, label: "选项D" %>
    <%= f.input :answer, label: "参考答案" %>
    <%= f.input :note, label: "注解" %>

  <%= f.submit "提交", class: "btn btn-primary btn-info", data: { disable_with: "Submiting..." } %>
<% end %>
</div>