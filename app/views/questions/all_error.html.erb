<div class="col-md-8 col-md-offset-2">
<%= link_to("首页", root_path, class: "btn btn-success") %>
<h2>所有错题</h2>
<% @exams.each_with_index do |exam,i| %>
 <% @error_records = exam.answer_records.where(state: "error") %>
 <% if @error_records != [] %>

  <h3>第 <%= i+1 %>次考试错题</h3>

 
	<% @error_records.each_with_index do |r,i| %>
	  <p style="font-weight: bold;">第 <%= i+1 %> 题:<%= r.stem %></p>
      <p>A、<%= r.a %></p>
      <p>B、<%= r.b %></p>
      <p>C、<%= r.c %></p>
      <p>D、<%= r.d %></p>
      <p style="color: red;">你的答案：<%= r.rep_answer %></p>
      <p>参考答案：<%= r.answer %></p>
      <p>注释：<%= r.note %></p>
      <br>
   <% end %>
  <% end %>
 <% end %>
 </div>

 